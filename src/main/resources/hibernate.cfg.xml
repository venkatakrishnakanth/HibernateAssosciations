<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/hibernatedb</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">3333</property>
        <property name="hibernate.dialect">org.hibernate.dialect.ProgressDialect</property>
      <!-- create, update, create-drop, validate -->
        <property name="hbm2ddl.auto">create</property>
        <!-- <property name="hibernate.default_schema">hibernatedb</property> -->
        <property name="show_sql">true</property>
 
        
        <mapping class="com.bellinfo.hibernate.assosciations.manytomany.Car"/>
        <mapping class="com.bellinfo.hibernate.assosciations.manytomany.Drivers"/>
        <mapping class="com.bellinfo.hibernate.assosciations.onetomany.Parents"/>
        <mapping class="com.bellinfo.hibernate.assosciations.onetomany.Child"/>
         <mapping class="com.bellinfo.hibernate.assosciations.onetoone.CellPhone"/>
        
         <mapping class="com.bellinfo.hibernate.assosciations.onetoone.Owner"/>
        
        
        
    </session-factory>
</hibernate-configuration>